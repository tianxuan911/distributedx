<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:jms="http://www.springframework.org/schema/jms"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
      http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
      http://www.springframework.org/schema/jms
      http://www.springframework.org/schema/jms/spring-jms.xsd">
    <!-- a pooling based JMS provider -->
    <bean id="jmsFactory" class="org.apache.activemq.pool.PooledConnectionFactory" destroy-method="stop">
        <property name="connectionFactory">
            <bean class="org.apache.activemq.ActiveMQConnectionFactory">
                <property name="brokerURL">
                    <value>tcp://localhost:61616</value>
                </property>
            </bean>
        </property>
    </bean>
    <!-- 定义消息队列（Queue） 多用于点对点通信,一个消息只能被一个客户端获取 -->
    <bean id="queueDestination" class="org.apache.activemq.command.ActiveMQQueue">
        <!-- 设置消息队列的名字 -->
        <constructor-arg>
            <value>testSpringQueue</value>
        </constructor-arg>
    </bean>

    <!-- 定义话题（Topic）多用于消息的推送[订阅-发布],同一个消息可以被所有订阅的客户端获取 -->
    <bean id="topicDestination" class="org.apache.activemq.command.ActiveMQTopic">
        <!-- 设置话题的名字 -->
        <constructor-arg>
            <value>testSpringTopic</value>
        </constructor-arg>
    </bean>
    <jms:annotation-driven />
    <!-- Spring JMS Template -->
    <bean id="myJmsTemplate" class="org.springframework.jms.core.JmsTemplate">
        <property name="connectionFactory" ref="jmsFactory" />
        <property name="defaultDestination" ref="queueDestination" />
    </bean>

    <bean id="consumerMessageListenerOne" class="com.tx.util.ConsumerMessageListener" />
    <bean id="consumerMessageListenerTwo" class="com.tx.util.ConsumerMessageListenerTwo" />
    <!-- 消息监听容器，配置连接工厂,监听器是上面定义的监听器 -->
    <jms:listener-container destination-type="queue" container-type="default" connection-factory="jmsFactory"
                            concurrency="5-10">
        <jms:listener destination="testSpringQueue" ref="consumerMessageListenerOne" selector="userId='A'"/>
        <jms:listener destination="testSpringQueue" ref="consumerMessageListenerTwo" method="onMessage" selector="userId='B'"/>
    </jms:listener-container>
</beans>